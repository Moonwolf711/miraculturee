{
  "name": "@miraculturee/web",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npx serve dist -s -l tcp://0.0.0.0:${PORT:-3000}",
    "dev:local": "vite",
    "build": "cd ../.. && pnpm --filter @miraculturee/shared build && cd apps/web && tsc -b && vite build",
