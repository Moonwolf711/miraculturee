{
  "name": "@miraculturee/web",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npx serve dist -s -l tcp://0.0.0.0:${PORT:-3000}",
    "dev:local": "vite",
    "build": "cd ../.. && pnpm --filter @miraculturee/shared build && cd apps/web && tsc -b && vite build",
    "start": "npx serve dist -s -l tcp://0.0.0.0:${PORT:-3000}",
    "preview": "vite preview",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@miraculturee/shared": "workspace:*",
    "@stripe/react-stripe-js": "^3.5.0",
    "@stripe/stripe-js": "^5.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.1.0",
    "serve": "^14.2.0",
    "socket.io-client": "^4.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "happy-dom": "^20.6.1",
    "jsdom": "^25.0.1",
    "msw": "^2.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  }
}
