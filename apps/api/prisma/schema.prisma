generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  FAN
  LOCAL_FAN
  ARTIST
  ADMIN
}

enum EventStatus {
  DRAFT
  PUBLISHED
  SOLD_OUT
  COMPLETED
  CANCELLED
}

enum RaffleStatus {
  OPEN
  DRAWING
  COMPLETED
  CANCELLED
}

enum PoolTicketStatus {
  AVAILABLE
  ASSIGNED
  REDEEMED
}

enum TransactionType {
  SUPPORT_PURCHASE
  RAFFLE_ENTRY
  TICKET_PURCHASE
  ARTIST_PAYOUT
  REFUND
}

enum DirectTicketStatus {
  PENDING
  CONFIRMED
  TRANSFERRED
  REDEEMED
  REFUNDED
}

enum EventType {
  SHOW
  FESTIVAL
}

enum ExternalEventStatus {
  DISCOVERED
  IMPORTED
  PUBLISHED
  ARCHIVED
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  passwordHash   String
  name           String
  role           Role            @default(FAN)
  lat            Float?
  lng            Float?
  city           String?
  refreshToken        String?
  emailVerified       Boolean         @default(false)
  emailVerifyToken    String?         @unique
  emailVerifyExpiry   DateTime?
  passwordResetToken  String?         @unique
  passwordResetExpiry DateTime?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  artist         Artist?
  supportTickets SupportTicket[]
  raffleEntries  RaffleEntry[]
  transactions   Transaction[]
  notifications  Notification[]
  directTickets  DirectTicket[]
}

model Artist {
  id              String   @id @default(uuid())
  userId          String   @unique
  stageName       String
  genre           String?
  bio             String?
  stripeAccountId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  events Event[]
}

model Event {
  id               String      @id @default(uuid())
  artistId         String
  title            String
  description      String?
  venueName        String
  venueAddress     String
  venueLat         Float
  venueLng         Float
  venueCity        String      @default("")
  date             DateTime
  ticketPriceCents Int
  totalTickets     Int
  localRadiusKm    Float       @default(50)
  type             EventType   @default(SHOW)
  status           EventStatus @default(DRAFT)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  artist         Artist          @relation(fields: [artistId], references: [id], onDelete: Cascade)
  supportTickets SupportTicket[]
  poolTickets    PoolTicket[]
  rafflePools    RafflePool[]
  directTickets  DirectTicket[]

  @@index([status, date])
  @@index([venueLat, venueLng])
}

model SupportTicket {
  id              String   @id @default(uuid())
  eventId         String
  userId          String
  ticketCount     Int
  totalAmountCents Int
  message         String?
  stripePaymentId String?
  confirmed       Boolean  @default(false)
  createdAt       DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  poolTickets PoolTicket[]

  @@index([eventId])
  @@index([userId])
}

model PoolTicket {
  id              String           @id @default(uuid())
  eventId         String
  supportTicketId String
  status          PoolTicketStatus @default(AVAILABLE)
  assignedUserId  String?
  createdAt       DateTime         @default(now())

  event         Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  supportTicket SupportTicket @relation(fields: [supportTicketId], references: [id], onDelete: Cascade)

  @@index([eventId, status])
}

model RafflePool {
  id               String       @id @default(uuid())
  eventId          String
  tierCents        Int
  status           RaffleStatus @default(OPEN)
  scheduledDrawTime DateTime?
  drawnAt          DateTime?
  createdAt        DateTime     @default(now())

  event   Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  entries RaffleEntry[]

  @@unique([eventId, tierCents])
}

model RaffleEntry {
  id        String   @id @default(uuid())
  poolId    String
  userId    String
  won       Boolean  @default(false)
  ticketId  String?
  createdAt DateTime @default(now())

  pool RafflePool @relation(fields: [poolId], references: [id], onDelete: Cascade)
  user User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([poolId, userId])
  @@index([poolId])
}

model Transaction {
  id              String          @id @default(uuid())
  userId          String
  type            TransactionType
  amountCents     Int
  currency        String          @default("usd")
  stripePaymentId String?
  posReference    String?
  status          String          @default("pending")
  metadata        Json?
  createdAt       DateTime        @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  body      String
  read      Boolean  @default(false)
  metadata  Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
}

model DirectTicket {
  id                String             @id @default(uuid())
  eventId           String
  ownerId           String
  status            DirectTicketStatus @default(PENDING)
  priceCents        Int
  feeCents          Int
  stripePaymentId   String?
  ipAddress         String?
  deviceFingerprint String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  owner User  @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@unique([eventId, ownerId])
  @@index([eventId])
  @@index([ownerId])
}

model ExternalEvent {
  id                String              @id @default(uuid())
  externalId        String
  source            String
  sourceUrl         String

  // Event details
  title             String
  description       String?
  artistName        String
  artistId          String?

  // Venue details
  venueName         String
  venueAddress      String
  venueCity         String
  venueState        String?
  venueCountry      String
  venueLat          Float?
  venueLng          Float?
  venueId           String?

  // Timing
  eventDate         DateTime
  onSaleDate        DateTime?
  offSaleDate       DateTime?

  // Pricing
  minPriceCents     Int?
  maxPriceCents     Int?
  currency          String              @default("USD")

  // Classification
  genre             String?
  category          String?

  // Status
  status            ExternalEventStatus @default(DISCOVERED)
  importedEventId   String?

  // Metadata
  rawData           Json
  lastSyncedAt      DateTime            @default(now())
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@unique([externalId, source])
  @@index([eventDate])
  @@index([venueCity, eventDate])
  @@index([status])
  @@index([source])
}

model EventSyncLog {
  id            String   @id @default(uuid())
  source        String
  status        String
  eventsFound   Int
  eventsNew     Int
  eventsUpdated Int
  errorMessage  String?
  startedAt     DateTime
  completedAt   DateTime

  @@index([source, startedAt])
}
