{
  "name": "@miraculturee/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "cd ../.. && pnpm --filter @miraculturee/shared build && pnpm --filter @miraculturee/pos build && cd apps/api && DATABASE_URL=\"postgresql://placeholder:5432/db\" npx prisma generate",
    "start": "npx prisma migrate deploy && npx tsx src/server.ts",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "fastify": "^5.1.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/rate-limit": "^10.2.0",
    "@fastify/websocket": "^11.0.0",
    "@prisma/client": "^6.1.0",
    "bullmq": "^5.30.0",
    "bcrypt": "^5.1.1",
    "socket.io": "^4.8.0",
    "ioredis": "^5.4.0",
    "fastify-plugin": "^5.0.0",
    "zod": "^3.24.0",
    "tsx": "^4.19.0",
    "prisma": "^6.1.0",
    "@miraculturee/shared": "workspace:*",
    "@miraculturee/pos": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.0.0",
    "vitest": "^2.1.0"
  }
}
